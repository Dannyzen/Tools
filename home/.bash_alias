# Python virtualenv
venv () {
        SRC_DIRECTORY="."
        mkdir $1
        virtualenv $1
        source $SRC_DIRECTORY/$1/bin/activate;
        cd $SRC_DIRECTORY/$1;


}

activate() {
    source bin/activate
}

# word counter
count() {
    cat $1 | grep -o "$2" | wc -l
}
